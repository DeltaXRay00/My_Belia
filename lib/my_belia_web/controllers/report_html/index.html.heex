<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reports Management - MyBelia</title>
  <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet">
  <link rel="stylesheet" href={~p"/assets/admin.css"} />
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Inter', sans-serif;
      background-color: #f5f5f5;
      overflow-x: hidden;
    }
    .admin-container {
      display: flex;
      min-height: 100vh;
      width: 100%;
    }
  </style>
</head>
<body>
<.admin_layout current_page="laporan_program" page_title="Laporan Program">

    <!-- Reports Content -->
    <div class="program-management-content">
      <!-- Filter Section -->
      <div class="filter-section">
        <div class="filter-header">
          <h3 class="filter-title">Tapisan</h3>
        </div>
        <div class="filter-controls">
          <div class="search-box">
            <input type="text" class="search-input" placeholder="Carian..." />
            <button class="search-button">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </button>
          </div>
          <div class="filter-dropdowns">
            <div class="filter-item">
              <label class="filter-label">Status</label>
              <select class="filter-select">
                <option value="">Semua</option>
                <option value="active">Aktif</option>
                <option value="inactive">Tidak Aktif</option>
              </select>
            </div>
            <div class="filter-item">
              <label class="filter-label">Daerah</label>
              <select class="filter-select">
                <option value="">Semua</option>
                <option value="kl">Kuala Lumpur</option>
                <option value="selangor">Selangor</option>
              </select>
            </div>
            <div class="filter-item">
              <label class="filter-label">Tarikh</label>
              <input type="date" class="filter-date" />
            </div>
          </div>
        </div>
      </div>

      <!-- Action Section -->
      <div class="action-section">
                    <.link href={~p"/laporan_program/new"}>
          <button class="new-program-btn">Laporan Baharu</button>
        </.link>
      </div>

      <!-- Reports Grid -->
      <div class="program-grid">
        <%= for report <- @reports do %>
          <div class="program-card">
            <div class="program-card-content">
              <div class="program-info">
                <h3 class="program-title"><%= report.title %></h3>
                <p class="program-description"><%= report.description %></p>
                <div class="program-dates">
                  <small>Status: <%= report.status %></small>
                  <small>Program ID: <%= report.program_id %></small>
                  <small>Course ID: <%= report.course_id %></small>
                </div>
              </div>
            </div>
            <div class="program-actions">
              <.link navigate={~p"/laporan_program/#{report}"} class="action-icon view-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </.link>
                              <.link navigate={~p"/laporan_program/#{report}/edit"} class="action-icon edit-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="m18.5 2.5 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
              </.link>
                              <.link href={~p"/laporan_program/#{report}"} method="delete" data-confirm="Are you sure?" class="action-icon delete-btn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="3,6 5,6 21,6"></polyline>
                  <path d="m19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"></path>
                </svg>
              </.link>
            </div>
          </div>
        <% end %>
        
        <!-- Placeholder cards for empty state -->
        <%= if Enum.empty?(@reports) do %>
          <%= for _i <- 1..12 do %>
            <div class="program-card placeholder">
              <div class="program-card-content">
                <div class="program-info">
                  <div class="program-title" style="background: #e0e0e0; height: 20px; margin-bottom: 8px; border-radius: 4px;"></div>
                  <div class="program-description" style="background: #e0e0e0; height: 40px; margin-bottom: 12px; border-radius: 4px;"></div>
                  <div class="program-dates" style="background: #e0e0e0; height: 30px; border-radius: 4px;"></div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
</.admin_layout>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Get all dropdown toggles
  const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
  
  // Add click event listener to each dropdown toggle
  dropdownToggles.forEach(toggle => {
    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      
      // Get the dropdown menu ID from data attribute
      const dropdownId = this.getAttribute('data-dropdown');
      const dropdownMenu = document.getElementById(dropdownId);
      
      // Toggle active class on the toggle button
      this.classList.toggle('active');
      
      // Toggle show class on the dropdown menu
      dropdownMenu.classList.toggle('show');
    });
  });

  // Hamburger menu toggle functionality
  const menuToggle = document.getElementById('menu-toggle');
  const sidebar = document.querySelector('.sidebar');
  const mainContent = document.querySelector('.main-content');
  
  menuToggle.addEventListener('click', function() {
    sidebar.classList.toggle('hidden');
    mainContent.classList.toggle('sidebar-hidden');
  });
});
</script>
</body>
</html>
