<%= user_topbar(assigns) %>

<section class="program-detail-hero">
	<div class="container">
		<div class="breadcrumb">
			<a href="/senarai_geran" class="breadcrumb-link">â† Kembali ke Senarai Geran</a>
		</div>
	</div>
</section>

<section class="program-detail-section">
	<div class="container">
		<div class="program-detail-card">
			<div class="program-detail-header">
				<div class="program-detail-image">
					<%= if @grant.image_data do %>
						<img src={@grant.image_data} alt={@grant.name} />
					<% end %>
				</div>
			</div>
			<div class="program-detail-content">
				<h1 class="program-detail-title"><%= @grant.name %></h1>
				<div class="program-detail-description">
					<div class="description-content">
						<%= raw(@grant.description || "") %>
					</div>
				</div>
				<div class="program-detail-info">
					<div class="info-grid">
						<div class="info-item">
							<div class="info-label">Tujuan</div>
							<div class="info-value"><%= raw(@grant.purpose || "-") %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Keperluan</div>
							<div class="info-value"><%= raw(@grant.requirements || "-") %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Skop Pembiayaan</div>
							<div class="info-value"><%= raw(@grant.funding_scope || "-") %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Had Pembiayaan</div>
							<div class="info-value"><%= raw(@grant.funding_limit || "-") %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Tempoh Pembiayaan</div>
							<div class="info-value"><%= raw(@grant.funding_period || "-") %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Tempoh Permohonan</div>
							<div class="info-value">
								<%= if @grant.start_date && @grant.end_date do %>
									<%= Date.to_string(@grant.start_date) %> - <%= Date.to_string(@grant.end_date) %>
								<% else %>
									-
								<% end %>
							</div>
						</div>
					</div>
				</div>
				<div class="program-detail-actions">
					<button class="apply-now-btn" onclick="window.location.href='/permohonan_geran'">Mohon Sekarang</button>
					<a href="/senarai_geran" class="back-to-list-btn">Kembali ke Senarai</a>
				</div>
			</div>
		</div>
	</div>
</section>

<%= user_footer(assigns) %> 