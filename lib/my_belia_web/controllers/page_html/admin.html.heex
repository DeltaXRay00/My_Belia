<div class="admin-container">
  <!-- Left Sidebar -->
  <div class="sidebar">
          <div class="sidebar-header">
        <.admin_logo_size width="160" height="120" />
      </div>
    
    <div class="sidebar-section">
      <h3 class="section-title">UTAMA</h3>
      <ul class="nav-list">
        <li><a href="/admin" class="nav-link active">Dashboard</a></li>
        <li><a href="/admin" class="nav-link">Admin</a></li>
        <li><a href="/admin" class="nav-link">Tetapan</a></li>
        <li><a href="/admin" class="nav-link">Permohonan</a></li>
        <li><a href="/admin" class="nav-link">Program</a></li>
        <li><a href="/admin" class="nav-link">Kursus</a></li>
        <li><a href="/admin" class="nav-link">Organisasi</a></li>
        <li><a href="/admin" class="nav-link">Galeri</a></li>
      </ul>
    </div>
    
    <div class="sidebar-section">
      <h3 class="section-title">SISTEM</h3>
      <ul class="nav-list">
        <li><a href="/admin" class="nav-link">Log</a></li>
        <li><a href="/admin" class="nav-link">Program</a></li>
        <li><a href="/admin" class="nav-link">Kursus</a></li>
        <li><a href="/admin" class="nav-link">Organisasi</a></li>
        <li><a href="/admin" class="nav-link">Direktori</a></li>
        <li><a href="/admin" class="nav-link">Khidmat Pengguna</a></li>
      </ul>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Top Header -->
    <div class="top-header">
      <div class="menu-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </div>
      <h1 class="page-title">Admin Dashboard</h1>
      <div class="user-profile">
        <img src={~p"/images/0b9a9b81d3a113f1a70cb1cdc85b2d2d.jpg"} alt="Profile" class="profile-icon" />
      </div>
    </div>

    <!-- Dashboard Content -->
    <div class="dashboard-content">
      <!-- Top Row - Statistics Cards -->
      <div class="stats-row">
        <div class="stat-card">
          <h3 class="stat-title">Belia Berdaftar</h3>
          <div class="stat-content"></div>
        </div>
        <div class="stat-card">
          <h3 class="stat-title">Program Dilaksanakan</h3>
          <div class="stat-content"></div>
        </div>
        <div class="stat-card">
          <h3 class="stat-title">Kursus Dilaksanakan</h3>
          <div class="stat-content"></div>
        </div>
        <div class="stat-card">
          <h3 class="stat-title">Permohonan Aktif</h3>
          <div class="stat-content"></div>
        </div>
      </div>

      <!-- Bottom Row - Activity and Quick Access -->
      <div class="bottom-row">
        <div class="activity-section">
          <h3 class="section-title">Aktiviti Terkini</h3>
          <div class="section-content"></div>
        </div>
        <div class="quick-access-section">
          <h3 class="section-title">Akses Pantas</h3>
          <div class="section-content"></div>
        </div>
      </div>
    </div>
  </div>
</div>
