<%= user_topbar(assigns) %>

<section class="program-detail-hero">
	<div class="container">
		<div class="breadcrumb">
			<a href="/senarai_program" class="breadcrumb-link">‚Üê Kembali ke Senarai Program</a>
		</div>
	</div>
</section>

<section class="program-detail-section">
	<div class="container">
		<div class="program-detail-card">
			<div class="program-detail-header">
				<div class="program-detail-image">
					<img src={@program.image_data} alt={@program.name} />
				</div>
			</div>
			<div class="program-detail-content">
				<h1 class="program-detail-title"><%= @program.name %></h1>
				<div class="program-detail-description">
					<div class="description-content">
						<%= raw(@program.description) %>
					</div>
				</div>
				<div class="program-detail-info">
					<div class="info-grid">
						<div class="info-item">
							<div class="info-label">Tarikh Mula Permohonan</div>
							<div class="info-value"><%= Date.to_string(@program.start_date) %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Tarikh Tutup Permohonan</div>
							<div class="info-value"><%= Date.to_string(@program.end_date) %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Waktu Mula Permohonan</div>
							<div class="info-value"><%= Time.to_string(@program.start_time) %></div>
						</div>
						<div class="info-item">
							<div class="info-label">Waktu Tutup Penerimaan</div>
							<div class="info-value"><%= Time.to_string(@program.end_time) %></div>
						</div>
					</div>
				</div>
				
				<!-- Application Status Section -->
				<%= if @current_user != nil do %>
					<div class="application-status-section">
						<%= if @has_applied do %>
							<div class="application-status applied">
								<div class="status-icon">‚úÖ</div>
								<div class="status-text">
									<h3>Permohonan Dihantar</h3>
									<p>Anda telah memohon untuk program ini. Status permohonan anda akan dikemas kini.</p>
								</div>
							</div>
						<% else %>
							<%= if @can_apply do %>
								<div class="application-status eligible">
									<div class="status-icon">üìã</div>
									<div class="status-text">
										<h3>Layak Memohon</h3>
										<p>Anda layak untuk memohon program ini. Pastikan semua maklumat anda lengkap.</p>
									</div>
								</div>
							<% else %>
								<div class="application-status not-eligible">
									<div class="status-icon">‚ö†Ô∏è</div>
									<div class="status-text">
										<h3>Tidak Layak Memohon</h3>
										<p>Untuk memohon program ini, anda perlu:</p>
										<ul>
											<li>Muat naik dokumen sokongan di halaman <a href="/dokumen_sokongan">Dokumen Sokongan</a></li>
											<li>Lengkapkan maklumat pendidikan di halaman <a href="/profil_pengguna">Profil Pengguna</a></li>
										</ul>
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
				<% else %>
					<div class="application-status-section">
						<div class="application-status not-logged-in">
							<div class="status-icon">üîí</div>
							<div class="status-text">
								<h3>Log Masuk Diperlukan</h3>
								<p>Anda perlu <a href="/log-masuk">log masuk</a> untuk memohon program ini.</p>
							</div>
						</div>
					</div>
				<% end %>
				
				<div class="program-detail-actions">
					<%= if @current_user != nil and @can_apply do %>
						<button class="apply-now-btn" phx-click="apply-for-program">Mohon Sekarang</button>
					<% else %>
						<button class="apply-now-btn disabled" disabled>Mohon Sekarang</button>
					<% end %>
					<a href="/senarai_program" class="back-to-list-btn">Kembali ke Senarai</a>
				</div>
			</div>
		</div>
	</div>
</section>

<%= user_footer(assigns) %> 